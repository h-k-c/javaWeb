<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mapper.TransactionRecordMapper">

    <insert id="insert">
        insert into transactionrecord
        <trim prefix="(" suffix=")" prefixOverrides=",">
            <if test="cardNo!=null and cardNo!=''">
                ,cardNo
            </if>
            <if test="transactionDate!=null and transactionDate!=''">
                ,transactionDate
            </if>
            <if test="transactionAmount!=null and transactionAmount!=''">
                ,transactionAmount
            </if>
            <if test="balance!=null and balance!=''">
                ,balance
            </if>
            <if test="transactionType!=null and transactionType!=''">
                ,transactionType
            </if>
            <if test="remark!=null and remark!=''">
                ,remark
            </if>
        </trim>


        <trim prefix="values(" suffix=")" prefixOverrides=",">
            <if test="cardNo!=null and cardNo!=''">
                ,#{cardNo}
            </if>
            <if test="transactionDate!=null and transactionDate!=''">
                ,#{transactionDate}
            </if>
            <if test="transactionAmount!=null and transactionAmount!=''">
                ,#{transactionAmount}
            </if>
            <if test="balance!=null and balance!=''">
                ,#{balance}
            </if>
            <if test="transactionType!=null and transactionType!=''">
                ,#{transactionType}
            </if>
            <if test="remark!=null and remark!=''">
                ,#{remark}
            </if>
        </trim>
    </insert>

    <select id="queryRecord" resultType="com.test.pojo.TransactionRecord">
        select id,cardno as cardNo,transactiondate as transactionDate,transactionamount as transactionAmount,balance,transactiontype as transactionType,remark
        from transactionrecord
        <where>
            <if test="cardNo!=null">
                and cardNo=#{cardNo}
            </if>
            <if test="start!=null and end==null">
                and transactionDate>=#{start}
            </if>
            <if test="start==null and end!=null ">
                and transactionDate&lt;=#{end}
            </if>
            <if test="start==null and end!=null ">
                and transactionDate between #{start} and #{end}
            </if>
        </where>
    </select>
</mapper>